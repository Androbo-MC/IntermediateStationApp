<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/genre1Button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:onClick="onClick"
        android:text="カラオケ"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/genre2Button"
        app:layout_constraintRight_toRightOf="@+id/genre2Button"
        app:layout_constraintLeft_toLeftOf="@+id/genre2Button" />

    <Button
        android:id="@+id/genre2Button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:onClick="onClick"
        android:text="コンビニ"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/genre3Button"
        app:layout_constraintRight_toRightOf="@+id/genre3Button"
        app:layout_constraintLeft_toLeftOf="@+id/genre3Button" />

    <Button
        android:id="@+id/genre3Button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:onClick="onClick"
        android:text="カフェ"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/genre4Button"
        app:layout_constraintRight_toRightOf="@+id/genre4Button"
        app:layout_constraintLeft_toLeftOf="@+id/genre4Button" />

    <Button
        android:id="@+id/genre4Button"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:onClick="onClick"
        android:text="居酒屋"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/genre5Button"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/genre5Button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:onClick="onClick"
        android:text="レストラン"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/genre4Button"
        app:layout_constraintLeft_toLeftOf="@+id/genre4Button" />

</android.support.constraint.ConstraintLayout>
