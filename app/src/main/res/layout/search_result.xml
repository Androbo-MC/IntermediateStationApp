<?xml version="1.0" encoding="utf-8"?>
<!-- 検索結果画面レイアウト -->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.intermediatestationapp.intermediatestationapp.SearchResult">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/result_train"
        android:layout_width="500dp"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="550dp"
            android:scaleType="fitCenter"
            android:src=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/search_result"
            android:layout_width="180dp"
            android:layout_height="100sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="駅名が長い時の対応方法を検討する必要あり"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.30"/>

        <TextView
            android:id="@+id/search_result_kana"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="えきめいがながいときのたいおうほうほうをけんとうするひつようあり"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toTopOf="@+id/search_result"
            app:layout_constraintHorizontal_bias="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <include layout="@layout/com_button" />

</android.support.constraint.ConstraintLayout>
