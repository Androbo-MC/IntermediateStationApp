<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/genreButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="onClick"
        android:text="ジャンル"
        app:layout_constraintBaseline_toBaselineOf="@+id/routeButton"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/routeButton" />

    <Button
        android:id="@+id/routeButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="onClick"
        android:text="ルート"
        app:layout_constraintBaseline_toBaselineOf="@+id/shareButton"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/shareButton" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="onClick"
        android:text="共有"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/optionButton" />

    <Button
        android:id="@+id/optionButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="onClick"
        android:text="候補"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/shareButton"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="479dp" />

</android.support.constraint.ConstraintLayout>
